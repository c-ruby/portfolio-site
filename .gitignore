# -----------------------
# Dependencies
# -----------------------
/node_modules          
/.pnp                  # Yarn Plug’n’Play cache
.pnp.*                 # Yarn Plug’n’Play files
.yarn/*                # Yarn v2/v3 internal dirs
!.yarn/patches         # Keep patch files
!.yarn/plugins         # Keep custom plugins
!.yarn/releases        # Keep Yarn releases
!.yarn/versions        # Keep Yarn version manifests
!.yarn/sdks            # Keep Yarn SDKs

# -----------------------
# Testing / Coverage
# -----------------------
/coverage              # Test coverage output
*.lcov                 # Coverage reports
.nyc_output            # Coverage from NYC (Istanbul wrapper)

# -----------------------
# Next.js
# -----------------------
/.next                 # Next.js build output
/out                   # Static export output
next-env.d.ts          # Auto-generated by Next.js for TypeScript

# -----------------------
# Production builds
# -----------------------
/build                 # Generic production build dir

# -----------------------
# Logs
# -----------------------
logs                   # Logs folder
*.log                  # Any log file
npm-debug.log*         # NPM debug logs
yarn-debug.log*        # Yarn debug logs
yarn-error.log*        # Yarn error logs
pnpm-debug.log*        # pnpm debug logs
lerna-debug.log*       # Lerna (monorepo) debug logs

# -----------------------
# Diagnostic reports
# -----------------------
report.[0-9]*.[0-9]*.[0-9]*.[0-9]*.json  # Node.js crash reports

# -----------------------
# Runtime data
# -----------------------
pids                   # Process ID files
*.pid
*.seed
*.pid.lock

# -----------------------
# Instrumented libs
# -----------------------
lib-cov                # Coverage output from old tools

# -----------------------
# Build tools
# -----------------------
.grunt                 # Grunt temp files
bower_components       # Old Bower dependencies
.lock-wscript          # node-waf build lock
build/Release          # Compiled Node addons


# -----------------------
# TypeScript
# -----------------------
*.tsbuildinfo          # TS incremental build cache

# -----------------------
# Optional caches
# -----------------------
.npm                   # npm cache
.eslintcache           # ESLint cache
.stylelintcache        # Stylelint cache

# -----------------------
# Misc
# -----------------------
.node_repl_history     # Node.js REPL history
*.tgz                  # npm pack output (tarballs)
.yarn-integrity        # Yarn integrity check

# -----------------------
# Environment
# -----------------------
.env                   # Environment variables
.env.*                 # Variants like .env.local, .env.dev
!.env.example          # Allow example env file for docs

# -----------------------
# Parcel
# -----------------------
.cache                 # Parcel v1 cache
.parcel-cache          # Parcel v2 cache


# -----------------------
# Serverless / Cloud
# -----------------------
.serverless/           # Serverless framework output
.fusebox/              # FuseBox bundler cache
.dynamodb/             # DynamoDB local data
.firebase/             # Firebase local emulators

# -----------------------
# Misc dev tools
# -----------------------
.tern-port             # TernJS (JS analysis tool) port file
.vscode-test           # VSCode test instances

# -----------------------
# Vite
# -----------------------
vite.config.js.timestamp-*  # Vite config cache
vite.config.ts.timestamp-*  # Vite config cache

# -----------------------
# Vercel
# -----------------------
.vercel                # Auto-generated by Vercel CLI
